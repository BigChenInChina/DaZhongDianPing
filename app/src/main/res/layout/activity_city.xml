<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#d1cece"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorWhite">
        <ImageButton
            android:id="@+id/city_back"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yy_calendar_icon_previous"/>
        <RadioGroup
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="150dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radioButton_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="全部"
                android:checked="true"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingRight="8dp"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/city_radiobutton_background_left"/>
            <RadioButton
                android:id="@+id/radioButton_other"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="海外"
                android:textSize="20sp"
                android:paddingLeft="8dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/city_radiobutton_background_right"/>
        </RadioGroup>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:backgroundTint="@color/colorWhite"
        android:background="@drawable/round_corner_border">

        <ImageView
            android:id="@+id/city_head_iv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/navibar_icon_search" />

        <EditText
            android:background="@null"
            android:id="@+id/main_head_et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:hint="输入商户名、地点"
            android:textColor="@color/colorGray"
            android:textSize="15sp" />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/city_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>